{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "24.0.0",

  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "module": "nodenext",
    "target": "es2024",

    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["*.ts", "src/queue-management.ts", "src/types.ts", "src/queue-management.spec.ts"],
  "exclude": ["node_modules", "dist"],
}